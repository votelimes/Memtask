<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Base application theme. -->
    <style name="Theme.Clock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_1</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/main_1</item>
        <item name="android:textColorSecondary">@color/main_1</item>
        <item name="fontFamily">@font/encode_sans_medium</item>
        <item name="fontStyle">normal</item>


    </style>

    <style name="Theme.Clock.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Clock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Clock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="noteStyle">

    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>