<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.RingActivity">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stop_button_ring"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="STOP"
        android:layout_alignParentStart="true"
        android:onClick="onStop"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/snooze10_button_ring"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="10 minutes later"
        android:textSize="12sp"
        android:layout_toRightOf="@id/stop_button_ring"
        android:onClick="onSnooze10"
        />
</RelativeLayout>