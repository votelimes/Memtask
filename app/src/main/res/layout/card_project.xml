<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_top_layout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="15dp"
    android:layout_gravity="center_horizontal"
    app:cardElevation="20dp"
    app:cardMaxElevation="20dp"
    app:cardBackgroundColor="#E4E8F8"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/project_info_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Название проекта"
                android:text="Закончить вторую главу"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="@dimen/textSM"
                android:textColor="@color/black"
                android:background="@color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/project_progress_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_fact_check_black_24"
                android:contentDescription="Установлено уведомление"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@id/project_progress"
                app:layout_constraintTop_toTopOf="parent"

                />
            <TextView
                android:id="@+id/project_progress"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:textSize="@dimen/textMM"
                android:text="0%"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/project_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.12.21 12:00"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/textMM"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/project_name"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/project_tasks_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
</LinearLayout>

</com.google.android.material.card.MaterialCardView >