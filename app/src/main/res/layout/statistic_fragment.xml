<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.text.InputType" />
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.clock.viewmodels.StatisticViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StatisticFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fillViewport="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stat_interval1_start"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Начало интервала"
                    app:layout_constraintEnd_toStartOf="@+id/stat_interval1_end"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/stat_interval1_start_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{vm.mDataHolder.getStartChart1Range}"
                        android:textAlignment="center"
                        android:inputType="@{InputType.TYPE_NULL}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stat_interval1_end"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Конец интервала"
                    app:layout_constraintBottom_toBottomOf="@+id/stat_interval1_start"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/stat_interval1_start">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/stat_interval1_end_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{vm.mDataHolder.getEndChart1Range}"
                        android:textAlignment="center"
                        android:inputType="@{InputType.TYPE_NULL}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/stat_chart1"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stat_interval1_start"
                    android:layout_marginTop="32dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
