<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InputNoteActivity"
    android:layout_margin="5dp"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button_input_note"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/baseline_close_black_48dp"
        android:backgroundTint="@color/black"
        android:onClick="onCancel"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/text_input_note"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create task note"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/save_button_input_note"
        android:layout_toRightOf="@id/cancel_button_input_note"
        android:paddingBottom="40dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_button_input_note"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/baseline_check_black_48dp"
        android:backgroundTint="@null"
        android:onClick="onSave"
        android:layout_alignParentRight="true"
        />
    <EditText
        android:id="@+id/input_input_note"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/text_input_note"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:hint="Type your note here"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This message will be displayed on the screen when the task rings."
        android:layout_below="@id/input_input_note"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>