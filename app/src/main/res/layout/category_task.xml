<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <import type="android.view.View"/>
        <import type="android.text.InputType"/>
        <import type="com.example.clock.viewmodels.CategoryActivitiesViewModel"/>
        <variable
            name="vm"
            type="com.example.clock.viewmodels.CategoryActivitiesViewModel" />
        <variable
            name="data"
            type="com.example.clock.viewmodels.CategoryActivitiesViewModel.TaskObserver" />

    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/task_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#EFFAFB"
        app:cardElevation="8dp"
        android:checkable="true"
        android:checked="@{data.CompletedOrExpired}"
        app:checkedIconTint="@{data.theme.secondColor}"
        app:checkedIconSize="@{data.projectItem ? 70 : 100}"
        app:checkedIconMargin="4dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@{data.getRange()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/act_text_grey"
                android:visibility="@{data.getTask().getStartTime > 0 ? View.VISIBLE : View.GONE}"
                />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/task_br1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="task_range"
                />
            <LinearLayout
                android:id="@+id/task_category_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_shape"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/task_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Дом"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/task_br2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="task_category_layout"
                />
            <ImageView
                android:id="@+id/task_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_category_layout"
                android:src="@drawable/ic_outline_report_36"
                android:visibility="@{data.isProjectItem() ? View.GONE : (data.isImportant ? View.VISIBLE : View.GONE)}"
                />
            <TextView
                android:id="@+id/task_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@={data.Name}"
                app:strikeThrough="@{data.getCompletedOrExpired}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_range"
                android:textColor="@color/act_text_main"
                android:textStyle="bold"
                android:inputType="@{!data.getCompletedOrExpired ? InputType.TYPE_CLASS_TEXT : InputType.TYPE_NULL}"
                />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/task_br3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="task_name"
                />
            <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@={data.Description}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_name"
                android:textColor="@color/act_text_main"
                />
            <ImageView
                android:id="@+id/task_alarm_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_alarm_36"
                android:contentDescription="Установлено уведомление"
                android:layout_marginStart="12dp"
                android:paddingBottom="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_description"
                />
            <TextView
                android:id="@+id/task_alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/task_alarm_image"
                app:layout_constraintBottom_toBottomOf="@id/task_alarm_image"
                android:textColor="@color/act_text_main"
                android:text="@{data.getNotify()}"
                android:textSize="18sp"

            />
            <androidx.constraintlayout.widget.Group
                android:id="@+id/task_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{data.isNotifyEnabled ? View.VISIBLE : View.GONE}"
                app:constraint_referenced_ids="task_alarm_image,task_alarm_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>